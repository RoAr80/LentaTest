@model UserViewModel


@if (User.Identity.IsAuthenticated && Model != null)
{
    <h1>Здравствуйте, @Model.NameSurnameFathername</h1>

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Войти как админ</a>
    }

    <table class="table">
        <tr><th>Email</th> <th>ФИО</th> <th>Дата рождения</th><th>Название ВУЗа</th><th>Курс</th><th>Факультет</th><th>Номер телефона</th> <th>Информация о себе</th>  <th></th></tr>
        <tr>
            <td>@Model.Email</td>            
            <td>@Model.NameSurnameFathername</td>
            <td>@Model.DateOfBirth.ToShortDateString()</td>
            <td>@Model.University</td>
            <td>@Model.Course</td>
            <td>@Model.Faculty</td>
            <td>@Model.PhoneNumber</td>
            <td>@Model.AdditionalInfo</td>
            <td><a asp-controller="Account" asp-action="Edit">Изменить</a></td>
        </tr>
    </table>
}
else
{
    <h1>Главная страница</h1>    
}
