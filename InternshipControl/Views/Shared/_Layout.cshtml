<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/twitter-bootstrap/css/style.css" rel="stylesheet" />
    <title>Internship Lenta</title>
</head>
<body>
    <div class="container-fluid">

        <nav class="navbar navbar-expand-md">
            <a сlass="navbar-brand" asp-controller="Home" asp-action="Index">LENTA</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Вход</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
                        </li>
                    </ul>
                }
                else
                {
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <input class="btn btn-lg btn-danger btn-block" type="submit" value="Выход" />
                    </form>
                }

            </div>
        </nav>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>